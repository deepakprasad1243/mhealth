<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_gravity="top"
                android:orientation="vertical">
                <com.androidplot.pie.PieChart
                    android:id="@+id/mySimplePieChart"
                    android:layout_height="250dp"
                    android:layout_width="fill_parent"
                    androidPlot.title=""
                    androidPlot.titleWidget.labelPaint.textSize="@dimen/title_font_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:shadowColor="@color/black"
                    android:layout_marginTop="80dp"
                    android:shadowRadius="2"
                    android:text="unknown"
                    android:textSize="88dp"
                    android:textColor="@color/appRed"
                    android:id="@+id/stressScoreTextView"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:layout_above="@+id/stressScoreTextView"
                    android:textColor="@color/dark"
                    android:text="Stress score\n"
                    android:id="@+id/donutSizeSeekLabel"/>

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\n"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Since: \npast 1 week"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/dark"
                    android:id="@+id/durationTextView"
                    android:layout_gravity="center_horizontal" />



                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/durationSeekBar"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:max="5"
                    android:progress="2"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\n"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <!--Button
                android:id="@+id/startLogXYPlotButton"
                style="@style/toc_button"
                android:text="Stress data log"/>
            <Button android:id="@+id/startOrSensorExButton"
                style="@style/toc_button"
                android:text="Realtime Muse data"/>
            <Button android:id="@+id/museandpssbtn"
                style="@style/toc_button"
                android:text="Muse and PSS config"/-->

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
